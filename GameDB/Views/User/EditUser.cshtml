@model GameDB.Domain.DomainClasses.User
@{
    ViewData["Title"] = "EditUser";
}

<h1>EditUser</h1>
@using (Html.BeginForm("EditUser", "User", FormMethod.Post))
{
    <div>
        <input asp-for="Id" type="text" style="display: none;" />
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" value="@Model.Username" class="form-control" type="text" required/>
        </div>
        <div class="form-group" style="margin-top: 1%;">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" value="@Model.Email" class="form-control" type="email" required />
        </div>
        <div class="form-group" style="margin-top: 1%;">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" type="password" required/>
        </div>
        <div class="form-group" style="margin-top: 1%;">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" placeholder="@Model.ConfirmPassword" class="form-control" type="password" required/>
        </div>
        <input type="submit" class="btn btn-primary" value="Edit Game" />
    </div>
}

<a class="btn btn-info" href='javascript:history.go(-1)'>Cancel</a>
