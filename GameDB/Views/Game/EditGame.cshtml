@model GameDB.Domain.DomainClasses.Game
@{
    ViewData["Title"] = "EditGame";
}

<h1>Edit @Model.Title</h1>

@using (Html.BeginForm("EditGame", "Game", FormMethod.Post))
{
<div>
    <input asp-for="Id" type="text" style="display: none;" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" placeholder="@Model.Title" class="form-control" type="text" />
    </div>
    <div class="form-group" style="margin-top: 1%;">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
    </div>
    <div class="form-group" style="margin-top: 1%;">
        <label asp-for="Publisher">Publisher</label>
        <input asp-for="Publisher" placeholder="@Model.Publisher" class="form-control" type="text" />
    </div>
    <div class="form-group" style="margin-top: 1%;">
        <label asp-for="AgeRating">Age Rating</label>
        <input asp-for="AgeRating" placeholder="@Model.AgeRating" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Release_Date">Release Date</label>
        <input asp-for="Release_Date" placeholder="@Model.Release_Date" class="form-control" type="text" />
    </div>
    <div class="form-group" style="margin-top: 1%;">
        <label asp-for="Genres">Genres</label>
        <input asp-for="Genres" type="text" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="Edit Game" />
</div>
}

<a class="btn btn-info" href='javascript:history.go(-1)'>Cancel</a>