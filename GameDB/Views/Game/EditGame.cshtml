@model GameDB.Domain.DomainClasses.Game
@{
    ViewData["Title"] = "EditGame";
}

<h1>Edit @Model.Title</h1>

@using (Html.BeginForm("EditGame", "Game", FormMethod.Post))
{
<div>
    <input asp-for="Id" type="text" style="display: none;" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" placeholder="@Model.Title" class="form-control" type="text" required/>
    </div>
    <div class="form-group" style="margin-top: 1%;">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" required>@Model.Description</textarea>
    </div>
    <div class="form-group" style="margin-top: 1%;">
        <label asp-for="Publishers_id">Publisher</label>
        <input asp-for="Publishers_id" placeholder="@Model.Publishers_id" class="form-control" type="text" required/>
    </div>
    <div class="form-group" style="margin-top: 1%;">
        <label asp-for="Publishers_id">Age Rating</label>
        <input asp-for="Rating_id" placeholder="@Model.Rating_id" class="form-control" type="text" required/>
    </div>
    <div class="form-group">
        <label asp-for="Release_date">Release Date</label>
        <input asp-for="Release_date" placeholder="@Model.Release_date" class="form-control" type="text" required/>
    </div>
    <div class="form-group" style="margin-top: 1%;">
        <label asp-for="Publishers_id">Genres</label>
        <input asp-for="Rating_id" type="text" class="form-control" required/>
    </div>
    <input type="submit" class="btn btn-primary" value="Edit Game" />
</div>
}

<a class="btn btn-info" href='javascript:history.go(-1)'>Cancel</a>